    "api:dev": "node --watch api/server.js"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "snarkjs": "^0.7.4"
  }
}
