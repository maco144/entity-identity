{
  "name": "entity-identity",
  "version": "0.1.0",
  "description": "Zero-knowledge proof system for entity type verification",
  "type": "module",
  "bin": {
    "eid": "./src/cli.js"
  },
  "scripts": {
    "compile": "circom circuits/entity_type_proof.circom --r1cs --wasm --sym -l node_modules -o build",
    "compile:dual": "circom circuits/dual_identity_proof.circom --r1cs --wasm --sym -l node_modules -o build",
    "test": "node test/test-proof.js",
    "test:sdk": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "api": "node api/server.js",
    "api:dev": "node --watch api/server.js",
    "cli": "node src/cli.js",
    "prove": "node src/cli.js prove",
    "verify": "node src/cli.js verify",
    "types": "node src/cli.js types",
    "deploy:testnet": "npx hardhat run scripts/deploy.js --network sepolia"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "chalk": "^5.3.0",
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "snarkjs": "^0.7.4"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.4",
    "jest": "^29.7.0"
  }
}
